<form method="post" action="/recipes/<%= @recipe.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
<p><input type="text" name="name" placeholder="<%= @recipe.name %>"></p>
<p><input type="text" name="ingredients" placeholder="<%= @recipe.ingredients %>"></p>
<p><input type="text" name="cook_time" placeholder="<%= @recipe.cook_time %>"></p>
<p><input type="submit" value="Submit"></p>
</form>