<h2>Edit a Recipe</h2>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <h4><label for="name">Name:</label>
    <input type="text" name="name" id="name" placeholder="<%= @recipe.name %>"></h4>
  <p><label for="ingredients">Ingredients:</label>
    <textarea name="ingredients" id="ingredients" placeholder="<%= @recipe.ingredients %>"></textarea></p>
  <p><label for="name">Name:</label>
    <input type="text" name="cook_time" id="cook_time" placeholder="<%= @recipe.cook_time %>"></p>
  <p><input type="submit" value="submit" id="submit"></p>
</form>
