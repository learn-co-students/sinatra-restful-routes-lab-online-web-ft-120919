<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <p>Name: <input type="text" name="name" id="name" placeholder="<%= @recipe.name %>"></p>
  <p>Cooking Time: <input type="text" name="cook_time" id="cook_time" placeholder="<%= @recipe.cook_time %>"></p>
  <p>Ingredients: <input type="text" name="ingredients" id="ingredients" placeholder="<%= @recipe.ingredients%>"></p>
  <input type="submit" value="Submit">
</form>